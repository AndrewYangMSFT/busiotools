<Page
    x:Class="SensorExplorer.Scenario3DEO"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="White">

    <Grid MaxWidth="500">
        <StackPanel>
            <controls:Expander Header="Percentage Brightness Settings">
                <StackPanel Margin="20">
                    <StackPanel x:ConnectionId='29' x:Name="stackPanelComboBoxPercentage" HorizontalAlignment="Center" Orientation="Horizontal" Visibility="Collapsed">
                        <TextBlock Text="Set by" Margin="10,10,5,10" VerticalAlignment="Center"/>
                        <ComboBox x:ConnectionId='37' Name="comboBoxPercentage" Margin="10,10,0,10" Width="200"/>
                    </StackPanel>
                    <Slider x:ConnectionId='30' x:Name="percentageBrightnessSlider" MinWidth="300"                                                        Minimum="0" Maximum="100" Margin="10" Visibility="Collapsed"/>
                    <StackPanel x:ConnectionId='31' x:Name="stackPanelPercentageBrightness" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBox x:ConnectionId='34' x:Name="textBoxPercentageBrightness" Margin="10,10,5,10"/>
                        <TextBlock x:ConnectionId='35' x:Name="textBlockPercentageBrightness" Text="%" FontSize="18" VerticalAlignment="Center"/>
                        <Button x:ConnectionId='36' x:Name="buttonPercentageBrightness" Content="Set"                                          Margin="40,10,10,10"/>
                    </StackPanel>
                    <TextBlock x:ConnectionId='32' x:Name="textBlockPercentageInputError" Text="Please enter a number between 0 and 100." Foreground="Red" VerticalAlignment="Center" Visibility="Collapsed"/>
                    <TextBlock x:ConnectionId='33' x:Name="textBlockPercentageBrightnessSettings" Text="Brightness control is not supported on this device."/>
                </StackPanel>
            </controls:Expander>

            <controls:Expander Header="Scenario Brightness Settings">
                <controls:WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <Button x:ConnectionId='25' x:Name="fullBrightnessScenarioButton"                                            Margin="5">Full Brightness</Button>
                    <Button x:ConnectionId='26' x:Name="barcodeBrightnessScenarioButton"                                               Margin="5">Barcode Brightness</Button>
                    <Button x:ConnectionId='27' x:Name="idleBrightnessScenarioButton"                                            Margin="5">Idle Brightness</Button>
                    <Button x:ConnectionId='28' x:Name="noneBrightnessScenarioButton"                                            Margin="5">None</Button>
                </controls:WrapPanel>
            </controls:Expander>

            <controls:Expander Header="Nits Brightness Settings">
                <StackPanel Margin="20">
                    <StackPanel x:ConnectionId='19' x:Name="stackPanelNitsBrightness" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed">
                        <TextBox x:ConnectionId='22' x:Name="textBoxNitsBrightness" Margin="10,10,5,10"/>
                        <TextBlock x:ConnectionId='23' x:Name="textBlockNitsBrightness" Text="nits" FontSize="18" VerticalAlignment="Center"/>
                        <Button x:ConnectionId='24' x:Name="buttonNitsBrightness" Content="Set"                                    Margin="40,10,10,10"/>
                    </StackPanel>
                    <TextBlock x:ConnectionId='20' x:Name="textBlockNitsInputError" Foreground="Red" VerticalAlignment="Center" Visibility="Collapsed"/>
                    <TextBlock x:ConnectionId='21' x:Name="textBlockNitsBrightnessSettings" Text="Brightness control in nits is not supported on this device."/>
                </StackPanel>
            </controls:Expander>

            <controls:Expander Header="Color Settings">
                <controls:WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <Button x:ConnectionId='17' x:Name="accurateColorScenarioButton"                                           Margin="5">Accurate Colors</Button>
                    <Button x:ConnectionId='18' x:Name="nonColorScenarioButton"                                      Margin="5">None</Button>
                </controls:WrapPanel>
            </controls:Expander>

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:ConnectionId='10' x:Name="brightnessPercentageSupportedLabelTextBlock">Brightness Percentage Support:</TextBlock>
                    <TextBlock x:ConnectionId='11' x:Name="brightnessNitsSupportedLabelTextBlock">Brightness Nits Support:</TextBlock>
                    <TextBlock x:ConnectionId='12' x:Name="brightnessSettingLabelTextBlock">Brightness Setting:</TextBlock>
                    <TextBlock x:ConnectionId='13' x:Name="colorSettingLabelTextBlock">Color Setting:</TextBlock>
                    <TextBlock x:ConnectionId='14' x:Name="canOverrideLabelTextBlock">Can Override:</TextBlock>
                    <TextBlock x:ConnectionId='15' x:Name="isOverrideActiveLabelTextBlock">Override Active:</TextBlock>
                    <TextBlock x:ConnectionId='16' x:Name="overrideRequestLabelTextBlock">Override Requested:</TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:ConnectionId='3' x:Name="brightnessPercentageSupportedStateTextBlock">?</TextBlock>
                    <TextBlock x:ConnectionId='4' x:Name="brightnessNitsSupportedStateTextBlock">?</TextBlock>
                    <TextBlock x:ConnectionId='5' x:Name="brightnessSettingStateTextBlock">?</TextBlock>
                    <TextBlock x:ConnectionId='6' x:Name="colorSettingStateTextBlock">?</TextBlock>
                    <TextBlock x:ConnectionId='7' x:Name="canOverrideActiveStateTextBlock">?</TextBlock>
                    <TextBlock x:ConnectionId='8' x:Name="isOverrideActiveStateTextBlock">?</TextBlock>
                    <ToggleSwitch x:ConnectionId='9' x:Name="overrideToggle" OnContent="Requested" OffContent="Stopped" IsEnabled="False"                                 />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                    <TextBlock x:ConnectionId='2' x:Name="debugTextBlock">Please select a brightness or color setting before requesting an override</TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

